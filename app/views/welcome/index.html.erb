    <div class="container">
      <div class="row ">
        <div class ="card-group"> 
        <div class="col-md-4 col-xl-3 ">
          <div class="card mb-sm-3 mb-md-0 contacts_body">
            <div class="card-header">Chat</div>
          <div class="card-body">
            <ul >
              <% current_user.friends.each do |friend|%>
            <li >
              <div class="d-flex bd-highlight">
                <div class="img_cont">
                  <img src="<%=friend.profile_pic_url %>" class="rounded-circle user_img"><span class="online_icon"></span>
                </div>
                <div class="user_info">
                  <span>
                    <h2>
                    <%= link_to friend.user_name, conversations_path(user_id: friend), remote: true, method: :post %></h2></span>
              </div>
            </div>
            </li>            
            <%end%>
            </ul>
          </div>

        </div>
      </div>
      <% @conversations.each do |conversation| %>
        <div class="col-md-8 col-xl-9">
           <div class="card">
                <ul id="conversations-list">
                  
                    <%= render 'conversations/conversation', conversation: conversation, user: current_user %>
                </ul>
              </div>
            </div>
                  <% end %>

    </div>
  </div>
</div>




